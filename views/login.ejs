<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/headcontent.ejs') %>
    <title>Sign In</title>
  </head>

  <body>
    <%- include('./partials/header.ejs') %>

    <main class="container">
      <h1 class="text-center">Sign In</h1>
      <!-- The errorMessage contains a value set by the authentication logic if login fails -->
      <p class="text-center"><%- errorMessage %></p>
      <form action="/login/" method="post">

        <div class="row" id="centerText">
          <div class="col-sm col-md-6 col-lg-4 mx-auto my-2">
            <input
              type="text"
              class="form-control"
              name="username"
              placeholder="Username"
            />
          </div>
        </div>

        <div class="row" id="centerText">
          <div class="col-sm col-md-6 col-lg-4 mx-auto my-2">
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Password"
            />
          </div>
        </div>

        <div class="row">
          <div class="col-sm col-md-6 col-lg-4 mx-auto my-2">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="flexCheckDefault"
              />
              <label class="form-check-label" for="flexCheckDefault"
                >Remember Username</label
              >
            </div>
          </div>
        </div>

        <div class="row" id="centerText">
          <div class="col-sm col-md-6 col-lg-4 mx-auto my-2">
            <input
              type="submit"
              class="btn btn-primary mb-2"
              value="Login"
            /><br />
          </div>
        </div>

      </form>
    </main>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>
