    <%- include('./partials/header.ejs') %>

    <main class="container">
      <h1 class="text-center">My Learning</h1>

      <!-- All In-Process/Completed Learning Tracks -->
      <div class="row border border-dark my-2">
        <h4 id="centerText">My Learning Tracks</h4>
